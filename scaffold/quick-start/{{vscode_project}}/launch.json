{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "OpenMud Game Debug",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "omd",
            "args": ["run", "--debug", "--client", "--urls", "https://localhost:7087"],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "internalConsole",
            "justMyCode": false,
            "symbolOptions": {
                "searchPaths": ["${workspaceFolder}/bin"],
                "searchMicrosoftSymbolServer": false,
                "searchNuGetOrgSymbolServer": false
            }
        }
    ]
}